<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/background_dark">

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:src="@drawable/main_menu"
            android:paddingTop="20dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_one_player"
            android:layout_gravity="center"
            android:background="@drawable/one_player_button"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_two_player"
            android:layout_gravity="center"
            android:background="@drawable/two_player_button"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_exit"
            android:layout_gravity="center"
            android:background="@drawable/exit_game_button"/>
</LinearLayout><!-- From: file:/D:/android/android-studio/AndroidStudioProjects/TiKTakToeProject/TiKTakToe/src/main/res/layout/main_menu.xml -->